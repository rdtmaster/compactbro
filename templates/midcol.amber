mixin arrows($likes)
	div
		.arrow
		.up
		.login-required
		.upmod? $likes == 1
		[onclick="return vote(this)"]
		[role="button"]
	div
		.arrow
		.down
		.login-required
		.downmod? $likes == -1
		[onclick="return vote(this)"]
		[role="button"]


mixin midcol1($likes)
	div
		.midcol
		.unvoted? $likes == 0
		.likes? $likes == 1
		.dislikes? $likes == -1
		+arrows($likes)

mixin midcol2($likes)
	div.midcol
		+arrows($likes)